// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String
  emailVerified Boolean  @default(false)
  image         String?
  imageHash     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions    Session[]
  accounts    Account[]
  members     Member[]
  invitations Invitation[]
  apikeys     Apikey[]
  agents      Agent[]

  // Additional fields
  termsAccepted       Boolean @default(false)
  marketingOptIn      Boolean @default(false)
  onboardingCompleted Boolean @default(false)
  stripeCustomerId    String?

  // KYC verification (one-to-one)
  kycVerificationId    String?          @unique
  kycVerification      KycVerification? @relation(fields: [kycVerificationId], references: [id], onDelete: SetNull)
  veridianCredentialId String? // Placeholder for MAS-226

  // New domain relations
  createdOrgApiKeys    OrgApiKey[]           @relation("OrgApiKeyCreator")
  kycSubmissions       KycSubmission[]
  stripePaymentMethods StripePaymentMethod[]
  walletCaches         WalletCache[]
  veridianCredentials  VeridianCredential[]  @relation("UserVeridianCredential")

  @@unique([email])
  @@unique([stripeCustomerId])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  activeOrganizationId String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt

  @@map("verification")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String
  logo      String?
  metadata  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members     Member[]
  invitations Invitation[]

  stripeCustomerId String?
  invoiceEmail     String?

  // KYB fields
  kybVerificationId String?          @unique
  kybVerification   KybVerification? @relation(fields: [kybVerificationId], references: [id], onDelete: SetNull)

  // New domain relations
  orgApiKeys           OrgApiKey[]
  kybSubmissions       KybSubmission[]
  stripePaymentMethods StripePaymentMethod[]

  @@unique([slug])
  @@unique([stripeCustomerId])
  @@map("organization")
}

model KybVerification {
  id                String             @id @default(cuid())
  status            VerificationStatus @default(PENDING)
  sumsubApplicantId String?
  completedAt       DateTime?
  rejectionReason   String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  organization      Organization?
  submissions       KybSubmission[]

  @@index([sumsubApplicantId])
  @@map("kyb_verification")
}

model Member {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           String       @default("member")
  createdAt      DateTime     @default(now())

  @@unique([userId, organizationId])
  @@map("member")
}

model Invitation {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email          String
  role           String?
  status         String
  expiresAt      DateTime
  inviterId      String
  inviter        User         @relation(fields: [inviterId], references: [id], onDelete: Cascade)

  @@map("invitation")
}

model Apikey {
  id                  String    @id
  name                String?
  start               String?
  prefix              String?
  key                 String
  userId              String
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  refillInterval      Int?
  refillAmount        Int?
  lastRefillAt        DateTime?
  enabled             Boolean?
  rateLimitEnabled    Boolean?
  rateLimitTimeWindow Int?
  rateLimitMax        Int?
  requestCount        Int?
  remaining           Int?
  lastRequest         DateTime?
  expiresAt           DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@map("apikey")
}

model RateLimit {
  id          String  @id
  key         String?
  count       Int?
  lastRequest BigInt?

  @@map("rateLimit")
}

model KycVerification {
  id                String             @id @default(uuid())
  status            VerificationStatus @default(PENDING)
  sumsubApplicantId String?
  completedAt       DateTime?
  rejectionReason   String?
  expiresAt         DateTime?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  user              User?
  submissions       KycSubmission[]

  @@index([status])
  @@index([sumsubApplicantId])
  @@map("kyc_verification")
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
  REVIEW
}

model Agent {
  id          String   @id @default(cuid())
  name        String
  description String
  apiUrl      String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Verification
  verificationStatus   VerificationStatus? @default(PENDING)
  veridianCredentialId String?             // Credential ID from Veridian API

  // Metadata
  tags     String[] @default([])
  metadata String?  // JSON string for additional data

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // New domain relations
  agentReference      AgentReference?
  veridianCredentials VeridianCredential[] @relation("AgentVeridianCredential")

  @@index([userId])
  @@index([verificationStatus])
  @@map("agent")
}

