{
  "name": "@masumi/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "default": "./dist/client.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "import": "./dist/repositories/index.js",
      "default": "./dist/repositories/index.js"
    }
  },
  "files": [
    "dist",
    "prisma/schema.prisma"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo",
    "prepare": "pnpm exec prisma generate --no-hints && pnpm build",
    "prisma:generate": "pnpm exec prisma generate --no-hints",
    "prisma:migrate:dev": "pnpm exec prisma migrate dev",
    "prisma:migrate:deploy": "pnpm exec prisma migrate deploy",
    "prisma:migrate:reset": "pnpm exec prisma migrate reset",
    "prisma:studio": "pnpm exec prisma studio",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "admin:promote": "tsx scripts/admin.ts promote",
    "admin:demote": "tsx scripts/admin.ts demote",
    "admin:list": "tsx scripts/admin.ts list"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.0.1",
    "@prisma/client": "7.0.1",
    "pg": "8.16.3",
    "pg-pool": "3.10.1",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@types/node": "22.19.1",
    "@types/pg": "8.15.6",
    "dotenv": "17.2.3",
    "prisma": "7.0.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
